<?xml version="1.0"?>
#set($dollar = "$")
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>${project.getGroupId()}</groupId>
    <artifactId>${project.getArtifactId()}</artifactId>
    <version>${project.getVersion()}</version>
    <name>${timestamp}</name>
    <packaging>pom</packaging>
    <repositories>
        #foreach ($repository in $project.getRepositories())
            <repository>
                <id>${repository.getId()}</id>
                <url>${repository.getUrl()}</url>
                <layout>${repository.getLayout()}</layout>
            </repository>
        #end
    </repositories>
    <build>
        <extensions>
            #set($build = $project.getBuild())
            #foreach ($ext in $build.getExtensions())
                <extension>
                    <groupId>${ext.getGroupId()}</groupId>
                    <artifactId>${ext.getArtifactId()}</artifactId>
                    <version>${ext.getVersion()}</version>
                </extension>
            #end
        </extensions>
    </build>
    <profiles>
        <profile>
            <id>without-settings</id>
            <activation>
                <property>
                    <name>!with-settings</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-invoker-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <debug>false</debug>
                                    <projectsDirectory>${dollar}{basedir}</projectsDirectory>
                                    <disableReports>true</disableReports>
                                    <settingsFile>${dollar}{basedir}/settings.xml</settingsFile>
                                    <showErrors>true</showErrors>
                                    <showVersion>false</showVersion>
                                    <streamLogs>true</streamLogs>
                                    <pomIncludes>
                                        <pomInclude>pom.xml</pomInclude>
                                    </pomIncludes>
                                    <goals>
                                        <goal>clean</goal>
                                        <goal>package</goal>
                                        <goal>--update-snapshots</goal>
                                        <goal>-Dwith-settings=true</goal>
                                    </goals>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>with-settings</id>
            <activation>
                <property>
                    <name>with-settings</name>
                </property>
            </activation>
            <dependencies>
                #foreach ($item in $deps)
                    <dependency>
                        <groupId>${item.getGroupId()}</groupId>
                        <artifactId>${item.getArtifactId()}</artifactId>
                        <version>${item.getVersion()}</version>
                        <classifier>${item.getClassifier()}</classifier>
                        <type>${item.getType()}</type>
                    </dependency>
                #end
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <localRepositoryDirectory>${dollar}{basedir}/local-repo</localRepositoryDirectory>
                                    <overWriteReleases>true</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                    <excludeTransitive>true</excludeTransitive>
                                    <outputDirectory>${dollar}{basedir}</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
